<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/SonucScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center" >
        <TextView
            android:id="@+id/SonucTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:editable="false"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:text="Below are some of the ways to prevent or reduce the risk of breast cancer:
1.	Limit alcohol intake
2.	Avoid smoke
3.	Weight control
4.	Breast-feed your kids as long as possible
5.	Be physically fit
6.	Limit dose and duration of hormone therapy
7.	Avoid exposure to radiation and pollution
8.	Eat healthy
"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prevention of Breast Cancer"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
